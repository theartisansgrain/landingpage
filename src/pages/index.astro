      line-height: 1.6;
    }

    form {
      margin-top: 30px;
    }

    input[type="email"] {
      padding: 10px;
      width: 250px;
      max-width: 90%;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 1rem;
    }

    button {
      padding: 10px 20px;
      background-color: #4e3629;
      color: #fff;
      border: none;
      border-radius: 4px;
      margin-left: 10px;
      cursor: pointer;
      font-size: 1rem;
    }

    footer {
      margin-top: 60px;
      font-size: 0.85rem;
      color: #999;
